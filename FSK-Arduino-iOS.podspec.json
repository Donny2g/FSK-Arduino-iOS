Pod::Spec.new do |s|
  spec.name         = "FSK-Arduino-iOS"
  spec.version      = "0.0.1"
  s.summary         = "FSK Library for iOS interface with Arduino Development"
  spec.license      = { :type => 'BSD' }
  spec.homepage     = "https://github.com/ezefranca/FSK-Arduino-iOS"
  spec.authors      = { "Ezequiel Franca" => "ezequiel.ifsp@gmail.com"}
  s.social_media_url   = "http://twitter.com/ezefranca"
  s.platform     = :ios, '7.0'
  spec.source       = { 
  		:git => 'https://github.com/ezefranca/FSK-Arduino-iOS.git', :tag => s.version.to_s 
  }
  spec.source_files = "FSK-Arduino-iOS/SoftModem.{h,m}, FSK-Arduino-iOS/FK.{h,m}"
  spec.framework    = "AudioToolbox", "AVFoundation"
  s.requires_arc = false
end
